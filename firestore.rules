rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles — owner only
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Private owned cards — owner only
    match /users/{userId}/ownedCards/{cardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User settings — owner only
    match /users/{userId}/settings/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Private owner -> token mapping
    match /userShares/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public shared collection metadata
    match /sharedCollections/{token} {
      allow read: if resource.data.enabled == true;
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.userId == request.auth.uid;
    }

    // Public shared cards via token path only
    match /sharedCollections/{token}/ownedCards/{cardId} {
      allow read: if get(/databases/$(database)/documents/sharedCollections/$(token)).data.enabled == true;
      allow write: if request.auth != null
        && get(/databases/$(database)/documents/sharedCollections/$(token)).data.userId == request.auth.uid;
    }
  }
}
