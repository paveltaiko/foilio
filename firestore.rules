rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles — readable by everyone, writable only by the owner
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Owned cards — writable only by the owner, readable by everyone (public sharing)
    match /users/{userId}/ownedCards/{cardId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
  }
}
